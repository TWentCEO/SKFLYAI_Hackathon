<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1FAFF"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="426dp"
        android:layout_height="487dp"
        android:layout_marginTop="150dp"
        android:fillViewport="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:text="아이디"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="260dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="67dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/radius"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.509"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_idck"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/register"
                    android:text="중복 확인"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:text="비밀번호"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_pwck"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/radius"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_pwck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:text="비밀번호 재확인"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_pw"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/radius"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:text="이름"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/radius"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:text="생년월일"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_year"
                    android:layout_width="70dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="68dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/radius"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:hint=" 년도"
                    android:inputType="number"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_month"
                    android:layout_width="70dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/radius"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:hint=" 월"
                    android:inputType="number"
                    app:layout_constraintEnd_toStartOf="@+id/et_day"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintStart_toEndOf="@+id/et_year"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_day"
                    android:layout_width="70dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/radius"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:hint=" 일"
                    android:inputType="number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:text="주소"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_address"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/radius"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint=" 주소"
                android:inputType="text"
                android:minLines="2" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_addressDetail"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/radius"
                android:backgroundTint="@color/white"
                android:hint=" 상세 주소"
                android:inputType="text"
                android:minLines="2" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:text="전화번호"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/radius"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_parentsPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:text="보호자 전화번호"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_parentsPhone"
                android:layout_width="260dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/radius"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="187dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo1" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/radius"
        android:backgroundTint="#5A92FF"
        android:text="회원가입"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />


</androidx.constraintlayout.widget.ConstraintLayout>